spring.application.name=todo-list

# ------------------------------------
# MySQL Configuration
# ------------------------------------
spring.datasource.url=jdbc:mysql://localhost:3306/todo?useSSL=false&serverTimezone=UTC&createDatabaseIfNotExist=true
spring.datasource.username=root
spring.datasource.password=root
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# ------------------------------------
# JPA/Hibernate Configuration
# ------------------------------------
# Automatically create/update the schema based on your entities
spring.jpa.hibernate.ddl-auto=update
# Display SQL queries in the console for debugging
spring.jpa.show-sql=true
# Set the SQL dialect
spring.jpa.database-platform=org.hibernate.dialect.MySQLDialect